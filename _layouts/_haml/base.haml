!!!
%html
	%head
		%meta{charset: "utf-8"}

		%title {% if page.title %}{{ page.title }} &middot; {% endif %}Karthik Raj
		%meta{name: "description", content: "{% if page.excerpt %}{{ page.excerpt | strip_html }}{% else %}Karthik Raj. Engineer.{% endif %}"}

		%meta{name: "viewport", content: "width=device-width,initial-scale=1"}

		/ facebook meta tags
		%meta{property: "fb:admins", content: "100003993588361"}
		%meta{name: "og:site_name", content: "Karthik Raj Portfolio"}
		%meta{name: "og:image", content: "{{ site.url }}/images/avatar-large.png"}
		%meta{name: "og:title", content: "{{ page.title }}"}
		%meta{name: "og:url", content: "{{ site.url }}{{ page.url }}"}

		/ scripts
		%script{src: "/js/jquery-1.10.2.min.js"}
		%script{src: "/js/prefixfree.min.js"}
		%script{src: "/js/main.js"}

		/ css
		%link{rel: "stylesheet", href: "/css/main.css"}

	%body

		{{ content }}

		/ .copyright-wrapper
		/ 	.copyright
		/ 		All Rights Reserved - &copy; Karthik Raj {{ site.time | date: "%Y"}}
			
